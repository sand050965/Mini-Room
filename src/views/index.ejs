<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- favicon -->
        <link rel="icon" href="/img/favicon.ico" type="image/x-icon">
        <!-- Vendor CSS Files -->
        <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
              rel="stylesheet"
              integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
              crossorigin="anonymous">
        <!-- Template Main CSS File -->
        <link rel="stylesheet" href="/css/index.css">
        <title>Mini Room</title>
    </head>
    <body>
        <!-- ======= Header ======= -->
        <header class="center">
            <nav class="navbar navbar-grid">
                <div>
                    <a class="navbar-brand align-center" href="">
                        <img src="/img/logo.png" alt="" class="d-inline-block align-text-top">
                        <span class="logo">Mini Room</span>
                    </a>
                </div>
                <div class="setting-container">
                    <img src="/img/settings.png" alt=""/>
                </div>
                <div class="avatar-container">
                    <img src="/img/avatar.png" alt=""/>
                </div>
            </nav>
            <!-- .logo -->
        </header>
        <!-- End Header -->
        <!-- ======= Hero Section ======= -->
        <section class="hero center">
            <div class="container">
                <!-- ======= row ======= -->
                <div class="row align-center">
                    <div class="col-lg-6 left-contet" data-aos="fade-up" data-aos-delay="200">
                        <h1>Ready For Your Meeting from any device</h1>
                        <h2>We provide a room for your video confernce</h2>
                        <div class="align-center">
                            <div class="input-group">
                                <button class="btn btn-outline-secondary dropdown-toggle drop-down-btn align-center"
                                        type="button"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <img src="/img/video-plus.png" alt="" class="video-plus"/>
                                    <span>New meeting</span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" href=""><i class="fa-solid fa-link"></i>Create a meeting for later</a>
                                    </li>
                                    <li id="startBtn">
                                        <a class="dropdown-item"><i class="fa-solid fa-plus"></i>Start an instant meeting</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href=""><i class="fa-regular fa-calendar"></i>Schedule in Google Calendar</a>
                                    </li>
                                </ul>
                                <input type="text"
                                       class="form-control"
                                       aria-label="Text input with dropdown button"
                                       placeholder="Enter a code or link">
                            </div>
                            <!-- [768x] dropdown-button -->
                            
                            <!-- <input class="form-control" type="text" placeholder="Enter a code or link"> -->
                            <!-- /input-group -->
                            <button disabled id="joinBtn" class="btn join-btn disable none" type="btn">Join</button>
                        </div>
                    </div>
                    <div class="col-lg-6 right-contet order-1 order-lg-2 hero-img aos-init aos-animate center" data-aos="zoom-in" data-aos-delay="200">
                        <img src="/img/hero-img.png" class="img-fluid animated" alt="">
                    </div>
                </div>
                <!-- /.row -->
            </div>
        </section>
        <!-- End Hero -->
    </body>
</html>
<!-- Vendor JS Files -->
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script src="https://kit.fontawesome.com/8de498932c.js" crossorigin="anonymous"></script>
