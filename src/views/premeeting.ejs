<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- favicon -->
        <link rel="icon" href="/img/favicon.ico" type="image/x-icon">
        <!-- Vendor CSS Files -->
        <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
              rel="stylesheet"
              integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
              crossorigin="anonymous">
        <!-- Template Main CSS File -->
        <link rel="stylesheet" href="/css/premeeting.css">
        <script>
            const ROOM_ID = '<%= roomId %>';
            const ACTION = '<%= action %>';
        </script>
        <title>Mini Room</title>
    </head>
    <body>
        <div class="container">
            <div id="avatarContainer" class="avatar-container center none">
                <div class="avatar">
                    <img src="../img/avatar.png"/>
                </div>
            </div>
            <div id="videoContainer" class="video-container"></div>
            <div id="sideBar" class="side-bar center">
                <div class="side-bar-grid">
                    <h1 class="title">Join This Meeting</h1>
                    <h5 class="subtitle">Ready to join this meeting ?</h5>
                    <div class="premeeting-input-container">
                        <input class="form-control form-control-lg"
                               type="text"
                               placeholder="Enter Your Name">
                    </div>
                    <div class="premeeting-button-container">
                        <button id="confirmBtn"
                                type="button"
                                class="btn btn-primary btn-lg btn-block">Enter Your Name</button>
                    </div>
                    <div class="center">
                        <div class="icons-container center">
                            <i class="fa-solid fa-microphone"></i>
                            <i class="fa-solid fa-video"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
